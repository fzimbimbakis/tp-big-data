{
	"name": "fintech",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "users",
						"type": "DatasetReference"
					},
					"name": "users"
				},
				{
					"dataset": {
						"referenceName": "onboarding",
						"type": "DatasetReference"
					},
					"name": "onboarding"
				},
				{
					"dataset": {
						"referenceName": "transactions",
						"type": "DatasetReference"
					},
					"name": "transactions"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "AzureSqlDatabase1",
						"type": "LinkedServiceReference"
					},
					"name": "UserCount"
				},
				{
					"linkedService": {
						"referenceName": "AzureSqlDatabase1",
						"type": "LinkedServiceReference"
					},
					"name": "DropRates"
				},
				{
					"linkedService": {
						"referenceName": "AzureSqlDatabase1",
						"type": "LinkedServiceReference"
					},
					"name": "ActivacionRates"
				},
				{
					"linkedService": {
						"referenceName": "AzureSqlDatabase1",
						"type": "LinkedServiceReference"
					},
					"name": "HabitoRate"
				},
				{
					"linkedService": {
						"referenceName": "AzureSqlDatabase1",
						"type": "LinkedServiceReference"
					},
					"name": "SetupRate"
				}
			],
			"transformations": [
				{
					"name": "UsersInfo"
				},
				{
					"name": "BrazilFilter"
				},
				{
					"name": "ParseDates"
				},
				{
					"name": "OnboardingDates"
				},
				{
					"name": "ParseDates2"
				},
				{
					"name": "OnboardingInfo"
				},
				{
					"name": "TransactionsInfo"
				},
				{
					"name": "BrazilFilter2"
				},
				{
					"name": "BrazilFilter3"
				},
				{
					"name": "TransactionFilter"
				},
				{
					"name": "CountUsers"
				},
				{
					"name": "Drop"
				},
				{
					"name": "Activation"
				},
				{
					"name": "Habito"
				},
				{
					"name": "Setup"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Prop_0 as string,",
				"          user_id as string,",
				"          name as string,",
				"          email as string,",
				"          address as string,",
				"          birth_dt as string,",
				"          phone as string,",
				"          type as string,",
				"          rubro as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     multiLineRow: true) ~> users",
				"source(output(",
				"          Prop_0 as string,",
				"          {Unnamed: 0} as string,",
				"          first_login_dt as string,",
				"          week_year as string,",
				"          user_id as string,",
				"          habito as string,",
				"          habito_dt as string,",
				"          activacion as string,",
				"          activacion_dt as string,",
				"          setup as string,",
				"          setup_dt as string,",
				"          return as string,",
				"          return_dt as string",
				"     ),",
				"     allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> onboarding",
				"source(output(",
				"          Prop_0 as string,",
				"          user_id as string,",
				"          transaction_dt as string,",
				"          type as string,",
				"          segment as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> transactions",
				"users select(mapColumn(",
				"          user_id,",
				"          rubro",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> UsersInfo",
				"UsersInfo filter(startsWith(user_id,\"MLB\")) ~> BrazilFilter",
				"BrazilFilter2 derive(first_login_dt = toDate(first_login_dt,'yyyy-MM-dd'),",
				"          onboarding_ending = addDays(toDate(first_login_dt,'yyyy-MM-dd'),30),",
				"          habito_dt = toDate(first_login_dt,'yyyy-MM-dd'),",
				"          activacion_dt = toDate(first_login_dt,'yyyy-MM-dd'),",
				"          setup_dt = toDate(first_login_dt,'yyyy-MM-dd'),",
				"          return_dt = toDate(first_login_dt,'yyyy-MM-dd')) ~> ParseDates",
				"ParseDates filter(between(habito_dt, first_login_dt, onboarding_ending)&&",
				"between(activacion_dt, first_login_dt, onboarding_ending)&&",
				"between(setup_dt, first_login_dt, onboarding_ending)&&",
				"between(return_dt, first_login_dt, onboarding_ending)) ~> OnboardingDates",
				"BrazilFilter3 derive(transaction_dt = toDate(transaction_dt,'yyyy-MM-dd')) ~> ParseDates2",
				"onboarding select(mapColumn(",
				"          first_login_dt,",
				"          user_id,",
				"          habito,",
				"          habito_dt,",
				"          activacion,",
				"          activacion_dt,",
				"          setup,",
				"          setup_dt,",
				"          return,",
				"          return_dt",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> OnboardingInfo",
				"transactions select(mapColumn(",
				"          user_id,",
				"          transaction_dt,",
				"          type,",
				"          segment",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> TransactionsInfo",
				"OnboardingInfo, BrazilFilter join(OnboardingInfo@user_id == UsersInfo@user_id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> BrazilFilter2",
				"TransactionsInfo, OnboardingDates join(TransactionsInfo@user_id == UsersInfo@user_id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> BrazilFilter3",
				"ParseDates2 filter(between(transaction_dt, first_login_dt, onboarding_ending) && ((segment == \"1\" && type >= \"1\" && type <= \"7\") || (segment == \"2\" && type >= \"8\" && type <= \"9\"))) ~> TransactionFilter",
				"BrazilFilter aggregate(users = countDistinct(user_id)) ~> CountUsers",
				"OnboardingDates aggregate(count = countIf(return == \"0\")) ~> Drop",
				"OnboardingDates aggregate(count = countIf(activacion == \"1\")) ~> Activation",
				"OnboardingDates aggregate(count = countIf(habito == \"1.0\")) ~> Habito",
				"OnboardingDates aggregate(count = countIf(setup == \"1\")) ~> Setup",
				"CountUsers sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: 'bigdata',",
				"     tableName: 'users',",
				"     insertable: true,",
				"     updateable: false,",
				"     deletable: false,",
				"     upsertable: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     saveOrder: 0,",
				"     errorHandlingOption: 'stopOnFirstError',",
				"     mapColumn(",
				"          count = users",
				"     )) ~> UserCount",
				"Drop sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: 'bigdata',",
				"     tableName: 'dropRate',",
				"     insertable: true,",
				"     updateable: false,",
				"     deletable: false,",
				"     upsertable: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> DropRates",
				"Activation sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: 'bigdata',",
				"     tableName: 'activacionRate',",
				"     insertable: true,",
				"     updateable: false,",
				"     deletable: false,",
				"     upsertable: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> ActivacionRates",
				"Habito sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: 'bigdata',",
				"     tableName: 'habitoRate',",
				"     insertable: true,",
				"     updateable: false,",
				"     deletable: false,",
				"     upsertable: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> HabitoRate",
				"Setup sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: 'bigdata',",
				"     tableName: 'setupRate',",
				"     insertable: true,",
				"     updateable: false,",
				"     deletable: false,",
				"     upsertable: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> SetupRate"
			]
		}
	}
}